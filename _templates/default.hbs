<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title>{{site.title}}</title>
    <meta name="description" content="{{site.description}}">
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
  <body>
    {{> header}}
    <main>
      {{{contents}}}

      {{#if blog}}
        {{#each blog}}
          <a href="/{{path}}"><h2>{{title}}</h2></a>
        {{/each}}
      {{/if}}
    </main>
  </body>
</html>
